<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Music_Player.Pages.SingleContentPages.AlbumPage">
    <ContentPage.Content>
      
        <Grid RowDefinitions="auto, *">
            <StackLayout Grid.Row="0">
                <!--<Image x:Name="CoverArt"/>-->
                <Label x:Name="Name"/>
                <Label x:Name="Artist"/>
                <Label x:Name="Duration"/>
            </StackLayout>

            <ContentView Grid.Row="1" x:Name="SongContent"/>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>