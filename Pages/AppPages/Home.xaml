<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Music_Player.Pages.AppPages.Home">
    <ContentPage.Content>
        <Grid RowDefinitions="*, auto">
            <StackLayout Grid.Row="0">
                <Button Text="Search" Clicked="Search_OnClicked"></Button>
                <Button Text="Albums" Clicked="Albums_OnClicked"/>
                <Button Text="Artists" Clicked="Artists_OnClicked"/>
                <Button Text="Genres" Clicked="Genres_OnClicked"/>
                <Button Text="Folders" Clicked="Folders_OnClicked"/>
                <Button Text="PlayLists" Clicked="PlayLists_OnClicked"/>
                <Button Text="Songs" Clicked="Songs_OnClicked"/>
            </StackLayout>
            <StackLayout Grid.Row="1">
                <Button Text="Play" Clicked="Play_OnClicked"/>
            </StackLayout>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>